<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Text Styles -->
    <style name="TextAppearance.App.Headline1" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textSize">@dimen/text_size_display</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="TextAppearance.App.Headline2" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="TextAppearance.App.Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="TextAppearance.App.Body" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextAppearance.App.Caption" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>
    
    <!-- Divider Style -->
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/divider</item>
    </style>
    
    <style name="Divider.Vertical">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    
    <!-- Icon Style -->
    <style name="Icon">
        <item name="android:layout_width">@dimen/icon_size_normal</item>
        <item name="android:layout_height">@dimen/icon_size_normal</item>
        <item name="tint">@color/text_secondary</item>
    </style>
    
    <style name="Icon.Large">
        <item name="android:layout_width">@dimen/icon_size_large</item>
        <item name="android:layout_height">@dimen/icon_size_large</item>
    </style>
    
    <!-- Chip Style -->
    <style name="Widget.App.Chip" parent="Widget.Material3.Chip.Assist">
        <item name="chipCornerRadius">@dimen/corner_radius_medium</item>
        <item name="chipBackgroundColor">@color/primary_light</item>
        <item name="android:textColor">@color/white</item>
    </style>
    
    <!-- FAB Style -->
    <style name="Widget.App.FloatingActionButton" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.App.FloatingActionButton</item>
        <item name="elevation">@dimen/card_elevation_high</item>
    </style>
    
    <style name="ShapeAppearance.App.FloatingActionButton" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/corner_radius_large</item>
    </style>
    
    <!-- Dialog Style -->
    <style name="ThemeOverlay.App.Dialog" parent="ThemeOverlay.Material3.Dialog">
        <item name="dialogCornerRadius">@dimen/corner_radius_large</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    
    <!-- BottomSheet Style -->
    <style name="ThemeOverlay.App.BottomSheet" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Widget.App.BottomSheet</item>
    </style>
    
    <style name="Widget.App.BottomSheet" parent="Widget.Material3.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.App.BottomSheet</item>
    </style>
    
    <style name="ShapeAppearance.App.BottomSheet" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/corner_radius_large</item>
        <item name="cornerSizeTopRight">@dimen/corner_radius_large</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>
</resources>
